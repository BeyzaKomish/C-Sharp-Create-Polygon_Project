@model Book

<h2>Delete Book</h2>
<p>Are you sure you want to delete this book?</p>
<div>
    <strong>Title:</strong> @Model.Title
</div>


<form method="post" asp-controller="Dashboard" asp-action="DeleteConfirmed" asp-route-id="@Model.ID">
    <button type="submit">Yes, Delete</button>
    <a asp-controller="Dashboard" asp-action="ListBooks">Cancel</a>
</form>